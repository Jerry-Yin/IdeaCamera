<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar"></include>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.bm.library.PhotoView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"/>

        <!--效果预览界面-->
        <RelativeLayout
            android:id="@+id/layout_alpha"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="#000000"
            android:visibility="invisible">

            <Gallery
                android:id="@+id/gallery_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/camera_back"
                android:spacing="10dp"/>
        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--功能模块-->

        <Button
            android:id="@+id/btn_select_pho"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="选择图片"/>

        <Button
            android:id="@+id/btn_fun2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="像素处理"/>

        <Button
            android:id="@+id/btn_fun3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="三元素"/>

        <Button
            android:id="@+id/btn_fun4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:text="part4"/>

    </LinearLayout>

</LinearLayout>