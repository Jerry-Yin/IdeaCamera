<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar"></include>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp" />

        <!--效果预览界面-->
        <RelativeLayout
            android:id="@+id/layout_alpha"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="#000000"
            android:visibility="invisible">

            <Gallery
                android:id="@+id/gallery_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spacing="10dp"
                android:src="@drawable/camera_back" />
        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/buttom_bar_bgd2"
        android:layout_marginBottom="2dp">
        <!--功能模块-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_select_pho"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_add_pic"/>

            <TextView
                android:id="@+id/txt_fun1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择图片"
                android:textSize="10sp"
                android:textColor="#000000"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_fun2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/img_color_black"
                 />

            <TextView
                android:id="@+id/txt_fun2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加效果"
                android:textSize="10sp"
                android:textColor="#000000"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_fun3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/img_pen_black" />

            <TextView
                android:id="@+id/txt_fun3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="画笔"
                android:textSize="10sp"
                android:textColor="#000000"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_fun4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="part4"
                android:src="@drawable/btn_share_pic"/>

            <TextView
                android:id="@+id/txt_fun4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="画笔"
                android:textSize="10sp"
                android:textColor="#000000"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>