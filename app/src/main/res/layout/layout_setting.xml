<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_setting"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="2dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_model_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/btn_change_3d"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="0.8dp"
                android:background="@drawable/btn_item_click"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="画廊效果切换"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/txt_3d"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/img1"
                    android:text="3D效果"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_next_black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_file_dir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="0.8dp"
                android:background="@drawable/btn_item_click"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="照片存储路径"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_cur_dir"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/img2"
                    android:text="part2"
                    android:textSize="15sp"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:layout_marginRight="10dp"
                    android:maxWidth="150dp"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_next_black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_part3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btn_item_click"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="part3"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/img3"
                    android:text="part3"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_next_black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_about"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/btn_item_click"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="关于IdeaCamera"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_next_black"
                    />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>